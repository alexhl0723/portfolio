---
import '../styles/global.css'
import GitHub from '../icons/github.astro'
import LinkedIn from '../icons/linkedIn.astro'
import Email from '../icons/Email.astro'
import Cv from '../icons/cv.astro'
import ThemeColor from '../components/themeColor.astro'
---
<script src="../components/js/footerBar.js"></script>
<div class="social-bar flex bg-[#08101c] items-center justify-center w-auto gap-6 ease-in-out px-5 py-2 m-auto rounded-full">
  <div class="rounded-full social-icon"><a href="https://github.com/alexhl0723" target="_blank"><GitHub class="w-10 h-10 social-svg"/></a></div>
  <div class="rounded-full social-icon"><a href="https://www.linkedin.com/in/alexherbasleiva/" target="_blank"><LinkedIn class="text-black w-10 h-10 rounded-full social-svg"/></a></div>
  <div class="rounded-full social-icon"><a href="/CV Alex.pdf" download><Cv class="text-black w-10 h-10 social-svg"/></a></div>
  <div class="rounded-full social-icon"><a href="mailto:alexrodrigoherbas07@gmail.com" class="cursor-pointer"><Email class="w-10 h-10 rounded-full social-svg"/></a></div>
  <div class="rounded-full social-icon"><ThemeColor/></div>
</div>


<style>
  .social-bar {
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1); 
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }
  
  .social-bar:hover {
    transition: 5s ease-in-out;
    width: 380px;
    box-shadow: 0 15px 30px rgba(0,0,0,0.15);
  }
  
  .social-icon {
    transition-property: transform, box-shadow;
    transition-duration: 0.6s;
    transition-timing-function: cubic-bezier(0.34, 1.56, 0.64, 1.4); /* Curva suave con rebote natural */
    transform: scale(0.9);
    position: relative;
    z-index: 1;
    will-change: transform, z-index; /* Mejora el rendimiento */
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }
  
  .social-icon:hover {
    box-shadow: 0 8px 15px rgba(0,0,0,0.1);
    
  }
  
  .social-svg {
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    will-change: transform, filter;
  }
  
  .social-icon.active .social-svg {
    filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
  }
</style>