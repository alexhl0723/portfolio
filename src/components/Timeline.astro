---
import { translate } from '../utils/translate';
import WorkIcon from '../icons/work.astro'; // NecesitarÃ¡s crear este icono
import StudyIcon from '../icons/study.astro'; // Y este tambiÃ©n
import CertificateIcon from '../icons/certificate.astro'; // Y este
import { timelineData } from '../utils/data';

const { locale, t } = translate(Astro.url.pathname);

const itemsGeneral = timelineData[locale as keyof typeof timelineData] || timelineData.es || timelineData.en
|| timelineData.fr || timelineData.ja;

const getIcon = (type: string) => {
    switch(type) {
        case  itemsGeneral[0].type : return WorkIcon;
        case itemsGeneral[1].type : return StudyIcon;
        case itemsGeneral[2].type : return CertificateIcon;
        default: return WorkIcon;
    }
};

const getTypeColorTranslate = (type: string) => {
    switch(type) {
        case itemsGeneral[0].type : return 'bg-green-500';
        case itemsGeneral[1].type : return 'bg-blue-500';
        case itemsGeneral[2].type : return 'bg-purple-500';
        default: return itemsGeneral[0].type;
    }
}

---

<section class="py-12 sm:py-16 md:py-20 lg:py-24 w-full" id="experience">
    <div class="max-w-5xl mx-auto px-4">
        <h2 class="text-3xl sm:text-4xl dark:text-white/90 text-white/90 md:text-5xl font-semibold text-center mb-6 sm:mb-8 md:mb-12">
            {t.timeline.title}
            <span>ðŸš€</span>
        </h2>
        <p class="text-center dark:text-gray-400 mb-8 sm:mb-12 md:mb-16 max-w-xs sm:max-w-md md:max-w-2xl mx-auto text-sm sm:text-base">
            {t.timeline.description}
        </p>

        <div class="relative">
            <div class="absolute left-4 md:left-1/2 md:transform md:-translate-x-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-blue-500 via-purple-500 to-green-500 opacity-30"></div>
            
            <div class="space-y-8 md:space-y-12">
                {itemsGeneral.map((item, index) => {
                    const IconComponent = getIcon(item.type);
                    const isEven = index % 2 === 0;
                    
                    return (
                        <div class={`relative flex items-center ${isEven ? 'md:justify-start' : 'md:justify-end'}`}>
                            <div class={`timeline-item bg-black/20 backdrop-blur-sm border border-gray-800 rounded-xl p-6 ml-12 md:ml-0 md:w-5/12 hover:scale-105 transition-all duration-500 hover:border-gray-600 ${item.current ? 'ring-2 ring-green-500/30 bg-green-500/5' : ''}`}>
                                {item.current && (
                                    <div class="absolute -top-2 -right-2 bg-green-500 text-white text-xs px-2 py-1 rounded-full animate-pulse">
                                        {t.timeline.current}
                                    </div>
                                )}
                                
                                <div class="flex items-start justify-between mb-3">
                                    <div>
                                        <span class={`inline-block px-3 py-1 rounded-full text-xs font-medium mb-2 ${getTypeColorTranslate(item.type)} text-white`}>
                                            {item.date}
                                        </span>
                                        <h3 class="text-xl font-bold text-white/90 mb-1">{item.title}</h3>
                                        <div class="text-sm text-gray-400">
                                            <span class="font-medium">{item.company}</span>
                                            <span class="mx-2">â€¢</span>
                                            <span>{item.location}</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <p class="text-gray-300 mb-4 text-sm leading-relaxed">
                                    {item.description}
                                </p>
                                
                                <div class="flex flex-wrap gap-2">
                                    {item.skills.map((skill) => (
                                        <span class="bg-sky-700/20 text-gray-100 text-xs px-2 py-1 rounded-full border border-gray-600">
                                            {skill}
                                        </span>
                                    ))}
                                </div>
                            </div>
                            
                            <div class={`absolute left-0 md:left-1/2 md:transform md:-translate-x-1/2 w-8 h-8 ${getTypeColorTranslate(item.type)} rounded-full flex items-center justify-center border-4 border-black shadow-lg z-10`}>
                                <IconComponent class="w-4 h-4 text-white" />
                            </div>
                            
                            <div class={`hidden md:block absolute top-1/2 w-8 h-0.5 bg-gray-600 ${isEven ? 'right-1/2 ml-4' : 'left-1/2 mr-4'}`}></div>
                        </div>
                    );
                })}
            </div>
        </div>
        
    </div>
</section>

<style>
    .timeline-item {
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(30, 41, 59, 0.4) 100%);
    }
    
    .timeline-item:hover {
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .timeline-item {
        animation: slideInUp 0.6s ease-out backwards;
    }
    
    .timeline-item:nth-child(even) {
        animation-delay: 0.2s;
    }
    
    .timeline-item:nth-child(odd) {
        animation-delay: 0.4s;
    }

    @keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .timeline-item {
            transform: translateX(0) !important;
        }
    }
</style>